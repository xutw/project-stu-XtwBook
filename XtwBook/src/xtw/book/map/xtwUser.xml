<?xml version="1.0" encoding="UTF-8" ?>


<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="/">

	<select id="findById" parameterType="int" resultType="xtw.book.pojo.XtwUser">
		select * from xtwUser where id=#{id}
	</select>
	<insert id="insertUser" parameterType="XtwUser" statementType="PREPARED"
		keyProperty="id" useGeneratedKeys="true">
		insert into xtwUser
		(userName,password) values
		(#{userName},#{password})
	</insert>
	<update id="updateUser" parameterType="XtwUser">
		UPDATE xtwuser SET
		userName=#{userName},
		password=#{password}
		WHERE id = #{id}
	</update>
	
	<select id="loginSelect" resultType="XtwUser" parameterType="hashmap">
		select * from XtwUser where userName=#{userName} and password=#{password}
	</select>
	
	<select id="login2" resultType="XtwUser" parameterType="XtwUser">
		select * from XtwUser where userName=#{userName} and password=#{password}
	</select>
	<select id="selectXtwUserList" resultType="XtwUser">
		select * from XtwUser
	</select>
	<resultMap id="XtwUserMap" type="XtwUser"> 
		<id property="id" column="id" /> 
		<result property="userName" column="userName"/> 
		<result property="password" column="password"/> 
	</resultMap>
	<select id="selectUsers" resultMap="XtwUserMap"> 
		select id, userName, password from XtwUser   
	</select>
	
	<resultMap id="visitMap" type="XtwUser">
		<id property="id" column="id" />
		<result property="userName" column="userName" />
		<collection property="visitList" javaType="ArrayList"
			column="visitID" ofType="xtw.book.pojo.Visit">
			<result property="visitID" column="visitID" />
			<result property="visitIP" column="visitIP" />
			<result property="visitDate" column="visitDate" />
		</collection>
	</resultMap>
	<select id="selectVisit" resultMap="visitMap">
		select * from XtwUser inner join visit on xtwuser.id=visit.userID
	</select>
</mapper>
